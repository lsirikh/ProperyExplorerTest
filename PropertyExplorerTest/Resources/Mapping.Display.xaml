                    Visibility="{Binding Path=IsBodyShow.Value, Converter={StaticResource BooleanToVisibilityConverter}, Mode=TwoWay}"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    />
            </Grid>
        </control:DisplayPresenter>
    </DataTemplate>

